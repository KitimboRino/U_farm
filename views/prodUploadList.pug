doctype html
html
meta(charset="utf-8")
meta(name="viewport", content="width=device-width,initial-scale=1,shrink-to-fit=no")
title= `${title}`
link(rel="stylesheet", href="bootstrap/css/bs/bootstrap.min.css")
link(rel="stylesheet", href="fonts/font-awesome.min.css")
link(rel="stylesheet", href="styles/Sidebar-Menu-1.css")

div
#wrapper
  #sidebar-wrapper(style="background-color: #78AB45;")
    ul.sidebar-nav
      li.sidebar-brand
        a(style="background-color: rgba(255,255,255,0);color: rgb(0,0,0);font-size: 34px;") Ufarm
          i.fa.fa-tachometer.fa-2x
      //- li
      //-   a(href="/fOneList", style='color: blue;') Farmer Ones(FO)
      //-     i.fa.fa-table.fa-2x
      li
        a(href="uFarmList", style='color: blue;')  Urban Farmers (UF)
          i.fa.fa-table.fa-2x
      li
        a(href="/pUploadList", style="color: blue;") Agric Produce
          i.fa.fa-table.fa-2x
  .page-content-wrapper
      a.btn.btn-link#menu-toggle(role="button", href="#menu-toggle")
        i.fa.fa-bars
      .container-fluid
        .col-md-12
          div
        .col
          .card
            .card-body

                header.card-header
                    h4.card-title WELCOME
                |&nbsp
                div.form-row
                    div.col.form-group.col-md-10    
                        form.search(action='/pUploadList')
                            div.form-row
                                div.col-md-4
                                    input.form-control(name='ward' placeholder="Enter your search term(ward) ...")
                                div.col-md-3
                                    input.btn.btn-dark.btn-block(type="submit")
                table.table.table-striped.table-responsive
                    thead.bg-secondary
                        tr
                            th UNIQUE ID
                            th PRODUCE NAME
                            th DATE OF UPLOAD
                            th PHONE
                            th ADDRESS
                            th MODE OF DELIVERY
                            th WARD
                            th UNIT PRICE
                            th QUANTITY
                            th PRODUCE TYPE
                            th METHOD PAYMENT
                            th STATUS
                            th PRODUCT IMAGE
                            th ACTION
                            th 
                            th 

                    tbody
                        if items.length
                        each item in items
                            tr
                                td #{item.id}
                                td #{item.produceName}
                                td #{item.dateOfUpload}
                                td #{item.phone}
                                td #{item.address}
                                td #{item.modeOfDelivery}
                                td #{item.ward}
                                td #{item.unitPrice}
                                td #{item.quantity}
                                td #{item.produceType}
                                td #{item.mPayment}
                                td #{item.status}
                                td 
                                  img(src='/uploads/'+item.image height='100px' width='100px')
                                td
                                  a.button.btn.btn-dark.btn-block(href='/verify/'+item._id) Verify
                                td
                                  a.button.btn.btn-dark.btn-block(href='/prodUpdate/'+item._id) Update
                                //- td
                                //-   form(method="post" action='/deleteProduce')
                                //-       input(type="hidden", placeholder="", name="_id", value=item._id)
                                //-       button.btn.btn-dark.btn-block(type="submit") Delete
                        else
                            p No registrations yet :(
                div.form-row
                    div.col-md-2.offset-12
                        form(method="post" action='/logout') 
                            button.btn.btn-dark.btn-block(type="submit") Log out

script(src="javascripts/jquery.min.js")
script(src="bootstrap/js/bootstrap.min.js")
script(src="javascripts/Sidebar-Menu.js")                            