doctype html
html
meta(charset="utf-8")
meta(name="viewport", content="width=device-width,initial-scale=1,shrink-to-fit=no")
title= `${title}`
link(rel="stylesheet", href="bootstrap/css/bs/bootstrap.min.css")
link(rel="stylesheet", href="fonts/font-awesome.min.css")
link(rel="stylesheet", href="styles/Sidebar-Menu-1.css")
link(rel="stylesheet", href="styles/css/Sidebar-Menu.css")
link(rel="stylesheet", href="assets/css/styles.css")
div
#wrapper
  #sidebar-wrapper(style="background-color: #78AB45;")
    ul.sidebar-nav
      li.sidebar-brand
        a(href="#", style="background-color: rgba(255,255,255,0);color: rgb(0,0,0);font-size: 34px;") Ufarm
      li
        a(href="#", style="color: blue;") Agricultural Officer (AO)
      li
        a(href="/farmerOneReg", style="color: blue;")  Register Farmer One (FO)
      li
        a(href="#", style="color: blue;") Urban Farmers (UF)
        a(href="#", style="color: blue;") Prod
        a(href="#", style="color: blue;") Prod
  .page-content-wrapper
    .container-fluid
      a.btn.btn-link#menu-toggle(role="button", href="#menu-toggle")
        i.fa.fa-bars
      .row
        .col-md-12
          div
        .col
          .card
            .card-body
   
                header.card-header
                    h4.card-title Welcome #{currentUser.username}
                    |&nbsp
                    div.form-row.container-fluid
                        div.col.form-group.col-md-10    
                            form.search(action='/fOneList')
                                div.form-row
                                    div.col-md-4
                                        input.form-control(name='ward' placeholder="Enter your search term(ward) ...")
                                    div.col-md-3
                                        input.btn.btn-dark.btn-block(type="submit")
                    table.table-responsive-lg.table.container-fluid
                        thead.bg-secondary.container-fluid
                            tr.container-fluid
                                th firstName 
                                th lastName
                                th Username
                                th Gender
                                th DateOfBirth
                                th Nin
                                th Phonenumber
                                th Address
                                th ResidenceType
                                th Ward
                                th FONumber
                                th Activities
                                th PeriodOfStay
                                th DateOfRegistration
                                th 
                                th
                        tbody
                            if users.length
                            each user in users
                                tr
                                    td #{user.firstName}
                                    td #{user.lastName}
                                    td #{user.username}
                                    td #{user.gender}
                                    td #{user.dateOfBirth}
                                    td #{user.nin}
                                    td #{user.phone}
                                    td #{user.address}
                                    td #{user.residenceType}
                                    td #{user.ward}
                                    td #{user.fOnumber}
                                    td #{user.activities}
                                    td #{user.periodOfStay}
                                    td #{user.dateOfReg}
                                    td 
                                    td
                                        a(href='/update/'+user._id) Update
                                    td
                                        form(method="post" action='/delete')
                                            input(type="hidden", placeholder="", name="id", value=user._id)
                                            button.btn.btn-secondary.btn-block(type="submit") Delete
                            else
                                p No registrations yet :(
                    div.form-row
                        div.col-md-2.offset-12
                            form(method="post" action='/logout') 
                                button.btn.btn-dark.btn-block(type="submit") Log out

script(src="javascripts/jquery.min.js")
script(src="bootstrap/js/bootstrap.min.js")
script(src="javascripts/Sidebar-Menu.js")