doctype html
html
meta(charset="utf-8")
meta(name="viewport", content="width=device-width,initial-scale=1,shrink-to-fit=no")
title= `${title}`
link(rel="stylesheet", href="bootstrap/css/bs/bootstrap.min.css")
link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
link(rel="stylesheet", href="styles/Sidebar-Menu-1.css")
link(rel="stylesheet", href="assets/css/styles.css")
div
#wrapper
  #sidebar-wrapper(style="background-color: #78AB45;")
    ul.sidebar-nav
      li.sidebar-brand
        a(style="color:#343a40 ;font-size: 34px; font-weight:bold;") Ufarm
      li
        a(class="i.fas fa-profile" style="color:#343a40 ; font-size: 14px; font-weight:bold;") AGRICULTURAL OFFICER(AO)
      li
        a(class="i.fas fa-table" href="#", style="color:#343a40 ; font-size: 14px; font-weight:bold;") Farmers One List (UF)
      li
        a(class="i.fas fa-table" href="/farmerOneReg", style="color:#343a40 ; font-size: 14px; font-weight:bold;")  Register Farmer One (FO)
      li
        a(class="i.fas fa-table" href="#", style="color:#343a40 ; font-size: 14px; font-weight:bold;") Urban Farmers List (UF)
        //- a(href="#", style="color: blue;") Prod
        //- a(href="#", style="color: blue;") Prod
  .page-content-wrapper
      a.btn.btn-link#menu-toggle(role="button", href="#menu-toggle")
        i.fa.fa-bars
      .container-fluid
        .col-md-12
          div
        .col
          .card
            .card-body

                header.card-header
                    h4.card-title Welcome #{currentUser.username}
                    |&nbsp
                    div.form-row
                        div.col.form-group.col-md-10    
                            form.search(action='/fOneList')
                                div.form-row
                                    div.col-md-4
                                        input.form-control(name='ward' placeholder="Enter your search term(ward) ...")
                                    div.col-md-3
                                      input.btn.btn-dark.btn-block(type="submit")
                    table.table.table-striped.table-responsive
                        thead.bg-secondary
                            tr
                                th First Name 
                                th Last Name
                                th User Name
                                th Gender
                                th Date Of Birth
                                th Nin
                                th Phone number
                                th Address
                                th Residence Type
                                th Ward
                                th FO Number
                                th Activities
                                th Period Of Stay
                                th Date Of Registration
                                th 
                                th
                        tbody
                            if users.length
                            each user in users
                                tr
                                    td #{user.firstName}
                                    td #{user.lastName}
                                    td #{user.username}
                                    td #{user.gender}
                                    td #{user.dateOfBirth}
                                    td #{user.nin}
                                    td #{user.phone}
                                    td #{user.address}
                                    td #{user.residenceType}
                                    td #{user.ward}
                                    td #{user.fOnumber}
                                    td #{user.activities}
                                    td #{user.periodOfStay}
                                    td #{user.dateOfReg}
                                    td 
                                      a.button.btn.btn-secondary.btn-block(href='/foUpdate/'+user._id ) Update
                                    td
                                      form(method="post" action='/foDelete')
                                          input(type="hidden", placeholder="", name="id", value=user._id)
                                          button.btn.btn-secondary.btn-block(type="submit") Delete
                                    
                            else
                                p No Registrations Available
                    div.form-row
                        div.col-md-2.offset-12
                            form(method="post" action='/logout') 
                                button.btn.btn-dark.btn-block(type="submit") Log out

script(src="javascripts/jquery.min.js")
script(src="bootstrap/js/bootstrap.min.js")
script(src="javascripts/Sidebar-Menu.js")